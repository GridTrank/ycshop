page{
  height: 100%;
  background: #f4f4f4;
}
.ms-container-order {
    height: 100%;
}
.orderScroll {
  height: calc(100% - 100rpx);
  background: #f4f4f4;
}
.ms-mask {
  position: absolute;
  background: #000;
  opacity: 0.5;
  width: 100%;
  height: 100%;
  z-index: 998;
}
.no-record {
    height: 80%;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 28rpx;
}
.no-record .warp {
    width: 100%;
    text-align: center;
    color:#7f7f7f;
}
.no-record  .image{
    display: block;
    width: 50%;
    margin: 0 auto 20rpx;
}

.callerPopup {
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    z-index: 10;
  }
  
  .callerPopup .popup-warp {
    position: absolute;
    top: 20%;
    z-index: 999;
    width: 70%;
    background: #fff;
    left: 15%;
    border-radius: 10rpx;
    text-align: center;
    line-height: 50rpx;
    padding: 40rpx 0 0;
  }
  
  .callerPopup .popup-warp .title {
    font-size: 28rpx;
  }
  
  .callerPopup .popup-warp .close {
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    right: 0;
    top: 0;
    text-align: center;
    line-height: 40rpx;
    display: block;
    color: #999;
  }
  
  .callerPopup .popup-warp .contact-button {
    position: relative;
    width: 100%;
    height: 80rpx;
    border-top: 1px solid #efefef;
    margin-top: 40rpx;
    line-height: 80rpx;
  }
  

  
  .callerPopup .popup-warp .item {
    font-size: 50rpx;
    color: #333;
    margin-top: 10rpx;
    font-family: PingFangSC, helvetica, 'Heiti SC';
  }
  
  .callerPopup .popup-warp .time {
    color: #999;
    font-size: 26rpx;
  }
  .ms-tab {
    height: 80rpx;
    background: #fff;
    font-size: 28rpx;
    display: flex;
    flex-shrink: 0;
    margin-bottom: 20rpx;
  
  }
  .ms-tab  .item {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
  }
  .ms-tab .item .text{
    position: relative;
  }
  .ms-tab .item .badge {
    position: absolute;
    background: #D9232F;
    color: #fff;
    font-size: 20rpx;
    width: 34rpx;
    height: 34rpx;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    right:-20rpx;
    top: -20rpx;
  }
  .ms-tab  .item.active{
    color: #d9232e;
  }
  .ms-tab  .item.active::after{
    position: absolute;
    bottom: 10rpx;
    border-radius: 20rpx;
    content: "";
    left: 50%;
    margin-left: -40rpx;
    width: 80rpx;
    height: 4rpx;
    background: #d9232e;
  }