/* pages/user/index.wxss */

page {
    overflow: hidden;
    height: 100%;
    background: #fff url(https://s1.miniso.cn/bsimg/ec/public/images/95/29/9529dbe42bcbee868568a7e00ca7f104.jpg?x-oss-process=style/high) no-repeat;
    background-size: 100%;
}

.ms-container-load {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.logo {
    flex-shrink: 0;
    display: flex;
    flex: 1;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}

.logo .icon {
    flex-shrink: 0;
    width: 464rpx;
}

.equity-warp {
    padding: 0 30rpx 100rpx;
    position: relative;
}

.equity-warp .equity {
    background: #fff;
    border-radius: 20rpx;
    height: 760rpx;
    box-sizing: border-box;
    padding: 60rpx 80rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.equity-warp .equity.join {
    justify-content: center;
}
.equity-warp .invite {
    height: 460rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;

}

.equity-warp .invite .photo {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    margin-bottom: 12rpx;
    display: inline-block;
}

.equity-warp .invite .invite-info {
    color: #666666;
    font-size: 32rpx;
    text-align: center;
}

.equity-warp .invite .no-invite {
    color: #7F7F7F;
    font-size: 28rpx;
    line-height: 80rpx;
    text-align: center;
}
.equity-warp .invite .no-invite text{
    color: #E72722;
    text-decoration: underline;
    padding: 0 10rpx;
}
.equity-warp .invite .title {
    text-align: center;
    color: #666666;
    font-size: 36rpx;
    font-weight: 600;
}
.equity-warp .invite .icon{
    width: 155rpx;
    height: 219rpx;
    margin: 25rpx 0;
}
.equity-warp .equity.join  .invite .icon{
    width: 286rpx;
    margin: 25rpx 0 60rpx;
}
.equity-warp .invite .dec{
    font-size: 32rpx;
    line-height: 45rpx;
    width: 446rpx;
    text-align: center;
}
.equity-warp .invite-input {
    height: 84rpx;
    border-bottom: 1px solid #D9232F;
    position: relative;
}

.change {
    color: #7F7F7F;
    margin-top: 40rpx;
    font-size: 28rpx;
}

.equity-warp .invite-input input {
    width: 100%;
    height: 84rpx;
    font-size: 40rpx;
    text-align: center;
    letter-spacing: 12rpx;
}

.equity-warp .invite-input .invalid {
    width: 72rpx;
    position: absolute;
    right: 0;
    top: 26rpx;
    z-index: 10;
}

.equity-warp .tip navigator {
    flex-shrink: 0;
    padding: 0 10rpx;
    color: #F2F2F2;
}

.equity-warp .btn-warp {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}
.equity-warp .btn-warp .message{
    color: #7F7F7F;
    display: flex;
    font-size: 28rpx;
    align-items: center;
    margin-bottom: 36rpx;
}
.equity-warp .btn-warp .message navigator{
    color: #E72722;
    margin: 0 10rpx;
}
.equity-warp .btn-warp .btn {
    background: #d9232f;
    font-size: 32rpx;
    color: #fff;
    font-weight: 400;
    width: 100%;
    border-radius: 100rpx;
}

.equity-warp .btn-warp .btn[disabled] {
    opacity: 0.5;
}

.equity-warp .btn-warp .dec {
    font-size: 28rpx;
    color: #666;
    line-height: 100rpx;
    display: flex;
}

.equity-warp .btn-warp .home {
    font-size: 28rpx;
    color: #AAAAAA;
    padding-top: 40rpx;
    display: flex;
    height: 40rpx;
    line-height: 40rpx;
}
.equity-warp .btn-warp .home navigator {
    color: #D9232F;
    margin:0 10rpx;
}
.equity-warp .btn-warp .login button {
    background: transparent;
    font-size: 28rpx;
    font-weight: 400;
    padding: 0;
    width: auto;
    height: 40rpx;
    line-height: 40rpx;
    color: #D9232F;
}