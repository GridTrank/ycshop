.ms-container-payBox {
    height: 100%;
    background-color: #f4f4f4;
}

.ms-payBox {
    background-color: #FFF;
    margin-bottom: 30rpx;
}

.ms-middle {
    width: 100%;
}
.ms-boxHd {
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #fff;
    font-size: 28rpx;
}
.ms-payBox .content {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 37.5rpx 0;
}

.ms-payBox .content .h4 {
    font-size: 32rpx;
    margin-bottom: 15rpx;
    font-weight: 400;
}

.ms-payBox .content .txt {
    width: 600rpx;
    color: #7f7f7f;
    font-size: 28rpx;
    text-align: center;
}

.ms-payBox .content image {
    width: 180rpx;
    margin-bottom: 20rpx;
}

.ms-payBox .content .btn {
    display: flex;
    width: 480rpx;
    justify-content: space-between;
    padding: 45rpx 0;
}

.ms-payBox .content .btn .ms-button {
    width: 210rpx;
    border-radius: 100rpx;
}

.ms-button.small {
    height: 60rpx;
    display: inline-flex;
}

.ms-button {
    border: 1px solid #cbcbcb;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    font-size: 28rpx;
}

.ms-backgroundNone,
.ms-button {
    background: 0 0;
}

.failRed {
    color: #E72722;
}

.success {
    color: #18B62B;
}

.ms-button.red-line {
    background: 0 0;
    color: #E72722;
    border: 1px solid #E72722!important;
}

.ms-button.small {
    height: 60rpx;
    display: inline-flex;
}


/**info**/

.ms-payBox .content.info {
    width: 100%;
    font-size: 28rpx;
    display: flex;
    align-items: flex-start;
    flex-direction: column;
    box-sizing: border-box;
    padding: 30rpx 18.75rpx;
}

.ms-payBox .content.info view {
    margin-bottom: 15rpx;
    font-size: 28rpx;
}

.ms-payBox .content.info view .mobile {
    margin-left: 20rpx;
}

.ms-payBox .content.info .address {
    font-size: 24rpx;
    color: #7f7f7f;
}

.ms-payBox .content.info view label {
    color: #7f7f7f;
}

label {
    cursor: default;
}

.ms-payBox .content.info div .txt {
    color: #333;
}

.ms-payBox .content.info view .red {
    color: #E72722;
}

.ms-xiaochengxu {
    height: 100%;
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
}

.ms-xiaochengxu .ms-mask {
    width: 100%;
    height: 100%;
    background: #000;
    opacity: 0.4;
    z-index: 10;
}

.ms-xiaochengxu .content {
    position: absolute;
    width: 80%;
    left: 10%;
    z-index: 11;
}

.ms-xiaochengxu .content image {
    width: 100%;
}

.ms-xiaochengxu .content button {
    color: #fff;
    border-color: #fff;
    width: 240rpx;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 28rpx;
    margin-top: 40rpx;
}