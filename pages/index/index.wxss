/* pages/default/index.wxss */

page {
  height: 100%;
}

.index-banner-swiper {
  overflow: hidden;
}



.ms-newPopup {
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 100;
}

.ms-newPopup .content {
  position: relative;
  z-index: 889;
  width: 70%;
}

.ms-newPopup .content .getNewCoupon {
  position: absolute;
  z-index: 10;
  top: 0;
  width: 100%;
  height: 100%;
  left: 0;
  opacity: 0;
}

.ms-newPopup .content image {
  height: auto;
  width: 100%;
}

.ms-newPopup .content .close {
  position: absolute;
  width: 60rpx;
  top: -100rpx;
  right: 0rpx;
}

.ms-newPopup .content .close::after {
  content: "";
  position: absolute;
  height: 44rpx;
  width: 1px;
  background: #f5f5f5;
  top: 60rpx;
  z-index: -1;
  right: 30rpx;
}

.ms-newPopup .content .pic {
  width: 100%;
}

.ms-indexDataContent {
  height: 100%;
  overflow: hidden;
}


.ms-indexFloor {
  background: #fff;
  margin: 20rpx ;
  border-radius: 10rpx;
  overflow: hidden;
}


/**楼层标题1**/

.ms-boxHd {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding: 30rpx 20rpx 10rpx;
  background: #fff;
}

.ms-boxHd .dec {
  color: #7F7F7F;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

.ms-boxHd .name {
  display: flex;
  align-items: center;
}

.ms-boxHd .name image {
  width: 116rpx;
}

.ms-boxHd .name .line {
  width: 10rpx;
  height: 30rpx;
  border-radius: 20rpx;
  margin-right: 16rpx;
  background: linear-gradient(to bottom, #EC2A22, #F84D46);
}



.bottom-line {
  position: relative;
  font-size: 26rpx;
  padding: 20rpx 0 40rpx;
  text-align: center;
  background: #f5f5f5;
}

.bottom-line text {
  background: #f5f5f5;
  display: inline-block;
  position: relative;
  z-index: 2;
  padding: 0 10rpx;
  color: #999;
  line-height: 40rpx;
}

.bottom-line::after {
  content: "";
  position: absolute;
  width: 220rpx;
  height: 2rpx;
  background: #999;
  left: 50%;
  margin-left: -110rpx;
  top: 39rpx;
}
