page {
    height: 100%;
    background: #f5f5f5;
}


/* swiper */

.swiper-warp {
    position: relative;
    border-bottom: 1px solid #e6e6e6;
}
.swiper{
    height: 500rpx;
}
.swiper-item{
    height: 100%;
}

.swiper-warp .share {
    position: absolute;
    right: 40rpx;
    top: 150rpx;
    z-index: 10;
}

.swiper-warp .share image {
    width: 80rpx;
    height: 80rpx;
}

.detail-wrap{
    padding: 26rpx;
    background: #fff;
}
.detail-wrap .price .p-tit{
    color: #333;
    font-size: 32rpx;
}
.detail-wrap .price .p-num{
    color: #FF250D;
    font-size: 40rpx;
}
.detail-wrap .info-title{
    color: #333;
    padding: 10rpx 0;
}
.detail-wrap .info-spec{
    color: #666;
    font-size: 30rpx;
}

.detail-pic{
    background: #fff;
    
}
.detail-pic .detail-tit{
   padding: 26rpx;
   border-top: 1px solid #efefef;

}
.ms-afterSale {
    margin-top: 20rpx;
    background: #fff;
    padding: 0 30rpx;
}

.ms-afterSale .title {
    height: 84rpx;
    font-size: 28rpx;
    color: #666;
    line-height: 84rpx;
    border-bottom: 1px solid #efefef;
}

.problem {
    padding: 20rpx 0 0;
}

.problem .item {
    padding: 0 0 26rpx;
    font-size: 26rpx;
    line-height: 40rpx;
    color: #7f7f7f;
}


.buy-btn{
    position: fixed;
    bottom: 0;
    height: 100rpx;
    width: 100%;
    background: #fff;
    display: flex;
    align-items: center;
}
.buy-btn .add-cart{
    width: 50%;
    text-align: center;
    line-height: 100rpx;
    height: 100%;
    background: #b22433;
    color: #fff;
}
.buy-btn .add-cart.buy{
    width: 50%;
    text-align: center;
    line-height: 100rpx;
    height: 100%;
    background: #245db2;
    color: #fff;
}