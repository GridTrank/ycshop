/* pages/order/index.wxss */
page{
  height: 100%;
  overflow: hidden;
  background: #f4f4f4;
}
.ms-container-order {
    height: 100%;
}
.orderScroll {
    height: calc( 100% - 100rpx);
    
}
.tab-warp {
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
}
.ms-typeTab{
  width: 296rpx;
  color: #E03E3E;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  border:1px solid #D9232F;
  border-radius: 100rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.ms-typeTab .item{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  position: relative;
  border-right: 0;
}

.ms-typeTab .item.active{
  background: #D9232F;
  color: #fff;
}
.ms-mask {
  position: absolute;
  background: #000;
  opacity: 0.5;
  width: 100%;
  height: 100%;
  z-index: 998;
}
.no-record {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 28rpx;
}
.no-record .warp {
    width: 100%;
    text-align: center;
    color:#7f7f7f;
}
.no-record  .image{
    display: block;
    width: 50%;
    margin: 0 auto 20rpx;
}

.ms-tab {
  height: 80rpx;
  background: #fff;
  font-size: 28rpx;
  display: flex;
  flex-shrink: 0;
}
.ms-tab  .item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.ms-tab .item .text{
  position: relative;
}
.ms-tab .item .badge {
  position: absolute;
  background: #D9232F;
  color: #fff;
  font-size: 20rpx;
  width: 34rpx;
  height: 34rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  right:-20rpx;
  top: -20rpx;
}
.ms-tab  .item.active{
  color: #d9232e;
}
.ms-tab  .item.active::after{
  position: absolute;
  bottom: 10rpx;
  border-radius: 20rpx;
  content: "";
  left: 50%;
  margin-left: -40rpx;
  width: 80rpx;
  height: 4rpx;
  background: #d9232e;
}
.ms-wrap{
  position: relative;
  height: 100%;
}
.subscription {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  box-sizing: border-box;
  z-index: 100;
  height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background:rgba(0,0,0,0.8);
  padding:0 30rpx;
}
.subscription .text{
  color: #fff;
  font-size: 28rpx;

}
.subscription .btn{
  height: 60rpx;
  background-color: #E72722;
  width: 152rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  border-radius: 100rpx;
  font-size: 28rpx;
}