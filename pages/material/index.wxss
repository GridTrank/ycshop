page{
  height: 100%;
}
.ms-container-material{
  height: 100%;
  padding:0 20rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  box-sizing: border-box;
}
.material-wrap{
  background-color: #fff;
  border-radius: 16rpx;
  padding:30rpx;
  margin-top: 20rpx;
  
}
.material-wrap .title{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 600;
  padding:  0 0 30rpx 0;
}
.material-wrap .title image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 16rpx;
}
.material-wrap .title text {
  color: #E72722;
}
.price{
  padding: 0 30rpx;
  height: 68rpx;
  line-height: 68rpx;
}
.price .title{
  padding: 0;
}
.writing{
  background: #FAFAFA;
  border-radius: 8rpx;
  padding: 24rpx ;
  font-size: 24rpx;
  max-height: 354rpx;
  box-sizing: border-box;
  overflow: auto;
  color: #666666;
}
.copy-warp{
  display: flex;
  justify-content: flex-end;
  align-items: center; 
}
.copy{
  display: inline-flex;
  justify-content: center;
  align-items: center; 
  width: 162rpx;
  height: 52rpx;
  border-radius: 26rpx;
  border:1px solid #CCCCCC;
  font-size: 24rpx;
  margin-top: 24rpx;

}
.material-foot{
  background:linear-gradient(90deg,rgba(245,79,71,1) 0%,rgba(231,39,34,1) 100%);
  border-radius: 100rpx;
  height: 92rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin:24rpx 30rpx;
  color: #fff;
  font-size: 32rpx;
}
.scroll-veiwItem{
  width: 100%;
  overflow: hidden;
  display: flex;
}
.save {
  color: #999999;
  font-size: 24rpx;
  text-align: center;
  margin-top: 30rpx;
}
.poster-wrap{
  display: flex;
  flex-wrap: nowrap;
  background: #fff;
}
.poster-box{
  flex-shrink:0;
  height: 180rpx;
  width: 180rpx;
  margin-right: 16rpx;
  position: relative;
}
.poster-box .poster-img {
  height: 180rpx;
  width: 180rpx;
}

.poster-box .icon {
    width: 28rpx;
    height: 28rpx;
    position: absolute;
    right: 0;
    top: 0;
    padding: 16rpx;
}
