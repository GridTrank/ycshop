
.footer{
	position: fixed;
	bottom: 0;
	width: 100%;
	background-color: #FFFFFF;
	color: #6e6d6b;
	-webkit-flex-shrink: 0;
	        flex-shrink: 0;
	height: 102rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	border-top: 2rpx solid #e2e2e2;
	box-shadow: 2rpx 2rpx 4rpx 0 rgba(0,0,0,.05);
	z-index: 999;
	padding-bottom: env(safe-area-inset-bottom);
}
.footer_item{
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	width: 20%;
	font-size: 26rpx;
	height: 120rpx;
	position: relative;
}
.footer_item.active{
	color: #f23030;
}
.footer_item .image{
	width: 40rpx;
	height: 40rpx;
}
.footer_item .text,
.footer_item .cart{
	margin-top: 10rpx;
}
.footer_item.big_item{
	position: relative;
	top: -30rpx;
	height: 200rpx;
}
.footer_item.big_item .image{
	width: 100rpx;
	height: 100rpx;
}
.footer_item.big_item .text{
	color: #b88f56;
}
.footer_item .cart{
	position: absolute;
	width: 22rpx;
	height: 22rpx;
	border: 2rpx solid #f23030;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	border-radius: 100%;
	color: #f23030;
	top: -2rpx;
	right: 45rpx;
	font-size: 18rpx;
	background: #FFFFFF;
}
.footer_item .cart.active{
	padding: 0 6rpx;
	border-radius: 30rpx;
	right: 30rpx;
}

