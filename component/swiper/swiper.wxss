/**幻灯图片**/

.ms-swiper {
    width: 100%;
    position: relative;
    z-index: 1;
}

.slide-image {
    height: 100%;
    width: 100%;
    display: block;
}

.ms-swiper .wx-swiper-dot {
    height: 14rpx;
    width: 14rpx;
    background-color: rgba(255, 255, 255, 0.55);
}

.ms-swiper .wx-swiper-dot.wx-swiper-dot-active {
    background-color: #E72722;
}

.detail {
    position: relative;
}

.detail .swiper-dot {
    position: absolute;
    font-size: 30rpx;
    color: #999;
    right: 26rpx;
    bottom: 30rpx;
    z-index: 2;
}

.index {
    position: relative;
}

.index .ms-swiper .swiper-item {
    padding: 12rpx 20rpx 6px 20rpx;
    box-sizing: border-box;
}

.index .ms-swiper .swiper-item .pic-warp {
    width: 100%;
    height: 100%;
    border-radius: 8rpx;
    box-shadow: 0 2rpx 4rpx #dbdbdb;
    overflow: hidden;
}

