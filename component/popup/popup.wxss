.ms-popup {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1200;
    display: flex;
    align-items: center;
    justify-content: center;
}

.ms-mask {
    position: absolute;
    background: #000;
    opacity: 0.5;
    width: 100%;
    height: 100%;
    z-index: 1200;
}

.ms-popup .content {
    position: relative;
    background: #fff;
    width: 525rpx;
    padding: 40rpx;
    left: 0;
    box-sizing: border-box;
    border-radius: 10rpx;
    text-align: center;
    z-index: 1201;
    margin-top: -100rpx;
}

.ms-popup .content .title {
    font-size: 34rpx;
    font-weight: 600;
    line-height: 60rpx;
}

.ms-popup .content .subhead {
    font-size: 28rpx;
    width: 80%;
    margin: 0 auto;
    font-weight: 600;
}

.ms-popup .content .dec {
    font-size: 22rpx;
    color: #666;
}

.ms-popup .content .img {
    width: 250rpx;
    padding: 40rpx 0;
    margin: 0 auto;
}

.ms-popup .btn {
    display: flex;
    justify-content: space-around;
}

.ms-popup .btn.double .button {
    width: auto;
}

.ms-popup .btn .button {
    border-radius: 100rpx;
    font-size: 26rpx;
    height: 74rpx;
    padding: 0;
    line-height: 74rpx;
    text-align: center;
    width: 100%;
}

.ms-popup .btn .button::after {
    border: none;
}

.ms-popup .btn .gradient {
    background: linear-gradient(to right, #db2831, #fe8e6f);
    color: #fff;
    box-shadow: 0 0 20rpx #fe8e6f;
}

.ms-popup .btn .lineRed {
    background: #fff;
    border: 1px solid #E72722;
    color: #E72722;
}

.ms-popup .content .close {
    position: absolute;
    bottom: -100rpx;
    width: 60rpx;
    height: 60rpx;
    z-index: 1200;
    left: 50%;
    margin-left: -30rpx;
}