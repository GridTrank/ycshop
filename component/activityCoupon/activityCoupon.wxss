}

.form-active {
    padding: 40rpx;
}

.form-active .input {
    background: #fff;
    border: 1px solid #efefef;
    border-radius: 10rpx;
    font-size: 28rpx;
    padding-left: 20rpx;
    height: 80rpx;
    margin-bottom: 20rpx;
}

.form-active .getCode {
    position: relative;
}

.form-active .getCode .button {
    position: absolute;
    right: 2rpx;
    background: #fff;
    top: 14rpx;
    z-index: 10;
    height: 60rpx;
    font-size: 28rpx;
    line-height: 60rpx;
    color: #333;
    display: block;
    width: 200rpx;
    border: none;
    border-left: 1px solid #efefef;
    border-radius: 0;
    padding: 0;
}

.form-active .getCode .button.disabled {
    color: #999;
}

.form-active .getCode .button::after {
    border: none;
}

.form-active .getCode .input {
    padding-right: 200rpx;
}

.form-active .btn .button {
    color: #fff;
    border: none;
    background: #E72722;
}

